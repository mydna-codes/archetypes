apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${artifactId}-app
  namespace: {{NAMESPACE}}
spec:
  selector:
    matchLabels:
      app: ${artifactId}-app
  replicas: 1
  template:
    metadata:
      labels:
        app: ${artifactId}-app
    spec:
      containers:
        - name: ${artifactId}-container
          image: {{IMAGE_NAME}}
          ports:
            - name: app-port
              containerPort: 8080
              protocol: TCP
          env:
            - name: KUMULUZEE_DATASOURCES0_CONNECTIONURL
              value: jdbc:postgresql://${artifactId}-db:5432/${artifactId}
            - name: KUMULUZEE_DATASOURCES0_USERNAME
              valueFrom:
                secretKeyRef:
                  name: ${artifactId}-db-credentials
                  key: username
            - name: KUMULUZEE_DATASOURCES0_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: ${artifactId}-db-credentials
                  key: password
          livenessProbe:
            httpGet:
              path: /health/live
              port: app-port
            initialDelaySeconds: 30
            periodSeconds: 3
          readinessProbe:
            httpGet:
              path: /health/ready
              port: app-port
            initialDelaySeconds: 30
            periodSeconds: 3
      restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: ${artifactId}-service
  namespace: {{NAMESPACE}}
  labels:
    app: ${artifactId}-service
spec:
  type: ClusterIP
  ports:
    - port: {{SERVICE_PORT}}
      protocol: TCP
      targetPort: app-port
  selector:
    app: ${artifactId}-app
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ${artifactId}
  namespace: {{NAMESPACE}}
spec:
  rules:
    - host: ${artifactId}.mydna.codes
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: ${artifactId}-service
                port:
                  number: {{SERVICE_PORT}}